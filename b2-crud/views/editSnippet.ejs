<%- include('header') -%>
    <%- include('flashMessage') -%>

        <h2>Edit Snippet</h2>

        <form action="/snippets/<%= snippet._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="<%= snippet.title %>" required class="form-control">
            </div>

            <div class="form-group">
                <label for="body">Body:</label>
                <textarea id="body" name="body" required class="form-control" rows="10"><%= snippet.body %></textarea>
            </div>

            <button type="submit" class="btn">Update Snippet</button>
        </form>

        <%- include('footer') -%>