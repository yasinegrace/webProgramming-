<%- include('header') -%>

  <h2>Create a New Snippet</h2>

  <form action="/snippets" method="POST" id="snippetForm">
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
    </div>

    <div class="form-group">
      <label for="body">Body:</label>
      <textarea id="body" name="body" required class="form-control" style="height: 200px; width: 80%;"></textarea>
    </div>
    <button type="submit" class="btn">Create Snippet</button>
  </form>

  <%- include('footer') -%>